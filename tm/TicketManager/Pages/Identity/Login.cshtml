@page
@model LoginModel

@{ ViewData["Title"] = "Login"; }

<main class="login-main">
	<h1>Login</h1>
	<form method="post">
		<input asp-for="Input.Email" type="text" placeholder="email">
			<span asp-validation-for="Input.Email"></span>
		<input asp-for="Input.Password" type="text" placeholder="password">
			<span asp-validation-for="Input.Password"></span>
		<button class="btn" type="submit" tabindex="0">Login</button>
		<button class="btn" type="button" tabindex="0">Demo User</button>
		<section><a asp-page="/Identity/Register">Create Account</a></section>
		<div class="link-wrap">
			<div><a asp-page="/Identity/ForgotPassword">forgot<br>password?</a></div>
			<div><a asp-page="/Identity/ResendEmailConfirmation">resend email<br>confirmation?</a></div>
		</div>
	</form>
</main>
